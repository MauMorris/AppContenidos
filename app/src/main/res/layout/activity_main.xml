<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin"
        tools:context="com.example.mauriciogodinez.appmiscontenidos.MainActivity">
        <!-- TextView con el titulo de la App-->
        <TextView
            android:id="@+id/titulo_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/titulo"
            android:textSize="@dimen/texto_titulo" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--Creamos un ScrollView porque el TV almacenara los datos-->
            <ScrollView
                android:id="@+id/datos_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!--TV con todos los datos -->
                <TextView
                    android:id="@+id/llamadas_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/titulo" />
            </ScrollView>

            <ProgressBar
                android:id="@+id/loading_indicator_progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </FrameLayout>
    </LinearLayout>
</layout>